        <aclResource>Magento_Backend::admin</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="allquestions_list_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>question_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
